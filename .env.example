# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Payment Methods Configuration
# GCash
GCASH_NUMBER=09123456789

# Maya (PayMaya)
MAYA_NUMBER=09123456789

# Bank Transfer
BANK_NAME=Your Bank Name
BANK_ACCOUNT_NAME=Your Account Name
BANK_ACCOUNT_NUMBER=1234567890

# Server Port
PORT=5000

# Sales API Configuration (for automatic order sync)
# URL of the sales website API
SALES_API_URL=http://localhost:3020
# API key for authenticating with the sales API (must match SALES_API_KEY in sales/.env)
SALES_API_KEY=your-sales-api-key-here
